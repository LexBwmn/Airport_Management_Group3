@model List<Fly_Away.Models.Ticket>

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>No bookings yet.</p>
}
else
{
    <table border="1" cellpadding="6">
        <tr>
            <th>Ticket ID</th>
            <th>Airline</th>
            <th>From</th>
            <th>To</th>
            <th>Class</th>
            <th>Barcode</th>
            <th>Ticket Image</th>
            <th></th>
        </tr>

        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Ticket_ID</td>
                <td>@t.Flight!.Airline!.Name</td>
                <td>@t.Flight!.Source!.Name</td>
                <td>@t.Flight!.Destination!.Name</td>
                <td>@t.FlightClass!.SeatType</td>
                <td>@t.Barcode</td>
               <td>
                @if (!string.IsNullOrWhiteSpace(t.TicketImageUrl))
                {
                    <a href="@t.TicketImageUrl" target="_blank">Open PNG</a>
                    <br />
                    <img src="@t.TicketImageUrl" style="max-width:220px;border:1px solid #ccc;margin-top:6px;" />
                }
                else
                {
                    <span>-</span>
                }
               </td>
                <td>
                    <a href="/BookingsPage/Details/@t.Ticket_ID">View</a>
                </td>
            </tr>
        }
    </table>
}
