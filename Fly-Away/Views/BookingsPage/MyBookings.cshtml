@model List<Fly_Away.Models.Ticket>

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>No bookings yet.</p>
}
else
{
    <table border="1" cellpadding="6">
        <tr>
            <th>Ticket ID</th>
            <th>Airline</th>
            <th>From</th>
            <th>To</th>
            <th>Class</th>
            <th>Ticket</th>
            <th></th>
        </tr>

        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Ticket_ID</td>
                <td>@t.Flight!.Airline!.Name</td>
                <td>@t.Flight!.Source!.Name</td>
                <td>@t.Flight!.Destination!.Name</td>
                <td>@t.FlightClass!.SeatType</td>

                <td>
                    @if (!string.IsNullOrWhiteSpace(t.TicketImageUrl))
                    {
                        <a href="@t.TicketImageUrl" target="_blank">
                            <img src="@t.TicketImageUrl"
                                 alt="Ticket @t.Ticket_ID"
                                 style="max-width:160px; height:auto; border:1px solid #444; border-radius:6px;" />
                        </a>
                    }
                    else
                    {
                        <span>Not generated</span>
                    }
                </td>

                <td>
                    <a href="/BookingsPage/Details/@t.Ticket_ID">View</a>
                </td>
            </tr>
        }
    </table>
}